rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.role == "admin";
    }

    function isRider() {
      return isSignedIn() && request.auth.token.role == "rider";
    }

    match /lockers/{lockerId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /riders/{riderId} {
      allow read: if isAdmin() || (isSignedIn() && request.auth.uid == riderId);
      allow create: if isSignedIn() && request.auth.uid == riderId;
      allow update: if isAdmin() || (
        isSignedIn() &&
        request.auth.uid == riderId &&
        request.resource.data.status == resource.data.status
      );
    }

    match /requests/{requestId} {
      allow create: if isSignedIn();
      allow read: if isAdmin()
        || isRider()
        || (isSignedIn() && request.auth.uid == resource.data.customerId);
      allow update: if isAdmin()
        || (
          isRider()
          && resource.data.status == "paid"
          && request.resource.data.status == "in_locker"
        )
        || (
          isSignedIn()
          && request.auth.uid == resource.data.customerId
          && resource.data.status == "in_locker"
          && request.resource.data.status == "completed"
        );
    }
  }
}
